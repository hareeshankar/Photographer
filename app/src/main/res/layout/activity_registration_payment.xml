<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_registration_payment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chennai.fapapp.Activities.RegistrationPayment">

    <RelativeLayout
        android:id="@+id/rel_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/black">

        <com.thunderbird.chennai.fapapp.Utility.TypefaceTextView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            app:customTypeface="@string/font_regular"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>

        <com.thunderbird.chennai.fapapp.Utility.TypefaceTextView
            android:id="@+id/tv_city_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="REGISTRATION"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:customTypeface="@string/font_bold" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rel_header"
        android:layout_above="@+id/btn_checkout"
        android:background="@drawable/bg1">

        <com.thunderbird.chennai.fapapp.Utility.TypefaceTextView
            android:id="@+id/tv_hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:customTypeface="@string/font_bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="Need to pay for Subscription"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            />

        <ImageView
            android:id="@+id/img_plan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/plan"
            android:layout_below="@id/tv_hello"/>

        <com.thunderbird.chennai.fapapp.Utility.TypefaceTextView
            android:id="@+id/tv_trial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:customTypeface="@string/font_bold"
            android:layout_margin="10dp"
            android:text="Application is free for first 7 days.Need to pay Rs.100 after 7 days."
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_below="@id/img_plan"
            />

    </RelativeLayout>

    <com.thunderbird.chennai.fapapp.Utility.TypefaceTextView
        android:id="@+id/btn_checkout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/orange"
        android:text="Next"
        android:textSize="25dp"
        app:customTypeface="@string/font_bold"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_alignParentBottom="true"></com.thunderbird.chennai.fapapp.Utility.TypefaceTextView>


</RelativeLayout>
