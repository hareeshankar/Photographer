<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rel_header">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/rel_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/avtar1"
                    android:background="@drawable/avtarbg"/>


                <RelativeLayout
                    android:id="@+id/rel_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile_image"
                    android:layout_margin="5dp">

                    <com.thunderbird.chennai.fapapp.Utility.TypefaceTextView
                        android:id="@+id/tv_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="First Name"
                        android:textColor="@color/darkgrey"
                        android:textSize="15sp"
                        app:customTypeface="@string/font_bold" />

                    <com.thunderbird.chennai.fapapp.Utility.EditTextK
                        android:id="@+id/edt_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_first_name"
                        android:background="@android:color/transparent"
                        android:inputType="textCapSentences"
                        android:textColor="@color/lightgrey"
                        app:fontNameET="@string/font_light"
                        />

                    <View
                        android:id="@+id/sep_1"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/edt_first_name"
                        android:background="@color/lightgrey"></View>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel_first_name"
                    android:layout_margin="5dp">

                    <com.thunderbird.chennai.fapapp.Utility.TypefaceTextView
                        android:id="@+id/tv_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Last Name"
                        android:textColor="@color/darkgrey"
                        android:textSize="15sp"
                        app:customTypeface="@string/font_bold" />

                    <com.thunderbird.chennai.fapapp.Utility.EditTextK
                        android:id="@+id/edt_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_last_name"
                        android:background="@android:color/transparent"
                        android:inputType="textCapSentences"
                        android:textColor="@color/lightgrey"
                        app:fontNameET="@string/font_light" />

                    <View
                        android:id="@+id/sep_2"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/edt_last_name"
                        android:background="@color/lightgrey"></View>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_phone_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel_last_name"
                    android:layout_margin="5dp">

                    <com.thunderbird.chennai.fapapp.Utility.TypefaceTextView
                        android:id="@+id/tv_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phone"
                        android:textColor="@color/darkgrey"
                        android:textSize="15sp"
                        app:customTypeface="@string/font_bold" />

                    <com.thunderbird.chennai.fapapp.Utility.TypefaceTextView
                        android:id="@+id/tv_country_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+91"
                        android:layout_below="@+id/tv_phone"
                        android:textColor="@color/lightgrey"
                        app:customTypeface="@string/font_light"
                        />

                    <com.thunderbird.chennai.fapapp.Utility.EditTextK
                        android:id="@+id/edt_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_phone"
                        android:background="@android:color/transparent"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:textColor="@color/lightgrey"
                        app:fontNameET="@string/font_light"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/tv_country_code"/>

                    <!--<com.nedfptra.Utility.EditTextK
                        android:id="@+id/edt_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_phone"
                        android:background="@android:color/transparent"
                        android:inputType="phone"
                        android:textColor="@color/lightgrey"
                        app:fontNameET="@string/font_light" />-->

                    <View
                        android:id="@+id/sep_8"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/edt_phone"
                        android:background="@color/lightgrey"></View>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel_phone_no"
                    android:layout_margin="5dp">

                    <com.thunderbird.chennai.fapapp.Utility.TypefaceTextView
                        android:id="@+id/tv_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:textColor="@color/darkgrey"
                        android:textSize="15sp"
                        app:customTypeface="@string/font_bold" />

                    <com.thunderbird.chennai.fapapp.Utility.EditTextK
                        android:id="@+id/edt_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_password"
                        android:background="@android:color/transparent"
                        android:inputType="textPassword"
                        android:textColor="@color/lightgrey"
                        app:fontNameET="@string/font_light" />

                    <View
                        android:id="@+id/sep_4"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/edt_password"
                        android:background="@color/lightgrey" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_company_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel_password"
                    android:layout_margin="5dp">

                    <com.thunderbird.chennai.fapapp.Utility.TypefaceTextView
                        android:id="@+id/tv_company_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Company Name"
                        android:textColor="@color/darkgrey"
                        android:textSize="15sp"
                        app:customTypeface="@string/font_bold" />

                    <com.thunderbird.chennai.fapapp.Utility.EditTextK
                        android:id="@+id/edt_company_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_company_name"
                        android:background="@android:color/transparent"
                        android:textColor="@color/lightgrey"
                        app:fontNameET="@string/font_light"
                        android:inputType="text"/>

                    <View
                        android:id="@+id/sep_10"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/edt_company_name"
                        android:background="@color/lightgrey"></View>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel_company_name"
                    android:layout_margin="5dp">

                    <com.thunderbird.chennai.fapapp.Utility.TypefaceTextView
                        android:id="@+id/tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textColor="@color/darkgrey"
                        android:textSize="15sp"
                        app:customTypeface="@string/font_bold" />

                    <com.thunderbird.chennai.fapapp.Utility.EditTextK
                        android:id="@+id/edt_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_address"
                        android:background="@android:color/transparent"
                        android:textColor="@color/lightgrey"
                        app:fontNameET="@string/font_light"
                        android:inputType="text"/>

                    <View
                        android:id="@+id/sep_3"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/edt_address"
                        android:background="@color/lightgrey"></View>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel_address"
                    android:layout_margin="5dp">

                    <com.thunderbird.chennai.fapapp.Utility.TypefaceTextView
                        android:id="@+id/tv_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="State"
                        android:textColor="@color/darkgrey"
                        android:textSize="15sp"
                        app:customTypeface="@string/font_bold" />

                    <com.thunderbird.chennai.fapapp.Utility.TypefaceTextView
                        android:id="@+id/edt_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_state"
                        android:background="@android:color/transparent"
                        android:drawableRight="@drawable/downarrow"
                        android:text="Select the state"
                        android:textColor="@color/lightgrey"
                        app:fontNameET="@string/font_light" />

                    <Spinner
                        android:id="@+id/sp_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_state"
                        android:visibility="invisible">

                    </Spinner>

                    <View
                        android:id="@+id/sep_9"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/edt_state"
                        android:background="@color/lightgrey" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel_state"
                    android:layout_margin="5dp">

                    <com.thunderbird.chennai.fapapp.Utility.TypefaceTextView
                        android:id="@+id/tv_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="City"
                        android:textColor="@color/darkgrey"
                        android:textSize="15sp"
                        app:customTypeface="@string/font_bold" />

                    <com.thunderbird.chennai.fapapp.Utility.TypefaceTextView
                        android:id="@+id/edt_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_city"
                        android:background="@android:color/transparent"
                        android:drawableRight="@drawable/downarrow"
                        android:text="Select the_city"
                        android:textColor="@color/lightgrey"
                        app:fontNameET="@string/font_light" />

                    <Spinner
                        android:id="@+id/sp_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_city"
                        android:visibility="invisible">

                    </Spinner>

                    <View
                        android:id="@+id/sep_7"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/edt_city"
                        android:background="@color/lightgrey" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel_city"
                    android:layout_margin="5dp">

                    <com.thunderbird.chennai.fapapp.Utility.TypefaceTextView
                        android:id="@+id/tv_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Area"
                        android:textColor="@color/darkgrey"
                        android:textSize="15sp"
                        app:customTypeface="@string/font_bold" />

                    <com.thunderbird.chennai.fapapp.Utility.TypefaceTextView
                        android:id="@+id/edt_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_area"
                        android:background="@android:color/transparent"
                        android:drawableRight="@drawable/downarrow"
                        android:text="Select the area"
                        android:textColor="@color/lightgrey"
                        app:fontNameET="@string/font_light" />

                    <Spinner
                        android:id="@+id/sp_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_area"
                        android:visibility="invisible">

                    </Spinner>

                    <View
                        android:id="@+id/sep_5"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/edt_area"
                        android:background="@color/lightgrey" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel_area"
                    android:layout_margin="5dp">

                    <com.thunderbird.chennai.fapapp.Utility.TypefaceTextView
                        android:id="@+id/tv_country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Country"
                        android:textColor="@color/darkgrey"
                        android:textSize="15sp"
                        app:customTypeface="@string/font_bold" />

                    <com.thunderbird.chennai.fapapp.Utility.TypefaceTextView
                        android:id="@+id/edt_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_country"
                        android:background="@android:color/transparent"
                        android:inputType="textCapSentences"
                        android:textColor="@color/lightgrey"
                        app:fontNameET="@string/font_light"
                        android:drawableRight="@drawable/downarrow"
                        android:text="Select the country"/>

                    <Spinner
                        android:id="@+id/sp_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_country"
                        android:visibility="invisible">
                    </Spinner>

                    <View
                        android:id="@+id/sep_6"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/edt_country"
                        android:background="@color/lightgrey" />
                </RelativeLayout>


                <com.thunderbird.chennai.fapapp.Utility.TypefaceTextView
                    android:id="@+id/btn_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rel_country"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/butn1"
                    android:paddingBottom="10dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="10dp"
                    android:text="Done"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    app:customTypeface="@string/font_bold" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>