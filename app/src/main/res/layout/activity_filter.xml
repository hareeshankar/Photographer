<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_filter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/rel_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/black">

        <ImageView
            android:id="@+id/nav_bar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/menu"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"/>

        <com.thunderbird.chennai.fapapp.Utility.TypefaceTextView
            android:id="@+id/tv_city_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FILTER"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:customTypeface="@string/font_bold"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <com.thunderbird.chennai.fapapp.Utility.TypefaceTextView
            android:id="@+id/tv_reset_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESET"
            android:textColor="@android:color/white"
            android:textSize="18sp"

            app:customTypeface="@string/font_bold"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rel_header"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/rel_header"
        android:layout_centerHorizontal="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <com.thunderbird.chennai.fapapp.Utility.TypefaceTextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State"
                app:customTypeface="@string/font_bold"
                android:textColor="@color/darkgrey"
                android:textSize="20dp"
                android:layout_centerVertical="true"/>

            <com.thunderbird.chennai.fapapp.Utility.TypefaceTextView
                android:id="@+id/tv_state_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:customTypeface="@string/font_regular"
                android:textColor="@color/lightgrey"
                android:textSize="15dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

            <Switch
                android:id="@+id/switch_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/darkgrey"
                android:layout_below="@+id/tv_state"
                android:layout_marginTop="25dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <com.thunderbird.chennai.fapapp.Utility.TypefaceTextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City"
                app:customTypeface="@string/font_bold"
                android:textColor="@color/darkgrey"
                android:textSize="20dp"

                android:layout_centerVertical="true"/>

            <com.thunderbird.chennai.fapapp.Utility.TypefaceTextView
                android:id="@+id/tv_city_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:customTypeface="@string/font_regular"
                android:textColor="@color/lightgrey"
                android:textSize="15dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

            <Switch
                android:id="@+id/switch_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/darkgrey"
                android:layout_below="@+id/tv_city"
                android:layout_marginTop="25dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <com.thunderbird.chennai.fapapp.Utility.TypefaceTextView
                android:id="@+id/tv_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Area"
                app:customTypeface="@string/font_bold"
                android:textColor="@color/darkgrey"
                android:textSize="20dp"
                android:layout_centerVertical="true"/>

            <com.thunderbird.chennai.fapapp.Utility.TypefaceTextView
                android:id="@+id/tv_area_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:customTypeface="@string/font_regular"
                android:textColor="@color/lightgrey"
                android:textSize="15dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

            <Switch
                android:id="@+id/switch_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/darkgrey"
                android:layout_below="@+id/tv_area"
                android:layout_marginTop="25dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <com.thunderbird.chennai.fapapp.Utility.TypefaceTextView
                android:id="@+id/tv_date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date1"
                app:customTypeface="@string/font_bold"
                android:textColor="@color/darkgrey"
                android:textSize="20dp"
                android:layout_centerVertical="true"/>



            <com.thunderbird.chennai.fapapp.Utility.TypefaceTextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:customTypeface="@string/font_regular"
                android:textColor="@color/lightgrey"
                android:textSize="15dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

            <com.thunderbird.chennai.fapapp.Utility.TypefaceTextView
                android:id="@+id/pop_up_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Date1"
                android:textSize="20dp"
                android:textColor="@color/colorAccent"
                android:layout_centerVertical="true"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/darkgrey"
                android:layout_below="@+id/tv_date"
                android:layout_marginTop="25dp"/>

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <com.thunderbird.chennai.fapapp.Utility.TypefaceTextView
                android:id="@+id/tv_session"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Session1"
                app:customTypeface="@string/font_bold"
                android:textColor="@color/darkgrey"
                android:textSize="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <com.thunderbird.chennai.fapapp.Utility.TypefaceTextView
                android:id="@+id/tv_session_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="Morning"
                android:textSize="20dp"
                android:textColor="@color/darkgrey"
                app:customTypeface="@string/font_regular"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/btn_down"/>

            <Spinner
                android:id="@+id/sp_session"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/btn_down"
                android:visibility="invisible">

            </Spinner>


                <ImageView
                    android:id="@+id/btn_down"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@drawable/downarrow"
                    />



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/darkgrey"
                android:layout_below="@+id/tv_session"
                android:layout_marginTop="25dp"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <com.thunderbird.chennai.fapapp.Utility.TypefaceTextView
                android:id="@+id/tv_date_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date2"
                app:customTypeface="@string/font_bold"
                android:textColor="@color/darkgrey"
                android:textSize="20dp"
                android:layout_centerVertical="true"/>



            <com.thunderbird.chennai.fapapp.Utility.TypefaceTextView
                android:id="@+id/tv_date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:customTypeface="@string/font_regular"
                android:textColor="@color/lightgrey"
                android:textSize="15dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

            <com.thunderbird.chennai.fapapp.Utility.TypefaceTextView
                android:id="@+id/pop_up_date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Date2"
                android:textSize="20dp"
                android:textColor="@color/colorAccent"
                android:layout_centerVertical="true"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/darkgrey"
                android:layout_below="@+id/tv_date2"
                android:layout_marginTop="25dp"/>

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <com.thunderbird.chennai.fapapp.Utility.TypefaceTextView
                android:id="@+id/tv_session2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Session2"
                app:customTypeface="@string/font_bold"
                android:textColor="@color/darkgrey"
                android:textSize="20dp"
                android:layout_alignBottom="@+id/btn_down2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <com.thunderbird.chennai.fapapp.Utility.TypefaceTextView
                android:id="@+id/tv_session_show2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="Morning"
                android:textSize="20dp"
                android:textColor="@color/darkgrey"
                app:customTypeface="@string/font_regular"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/btn_down2"/>




            <Spinner
                android:id="@+id/sp_session2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/btn_down2"
                android:visibility="invisible">

            </Spinner>


            <ImageView
                android:id="@+id/btn_down2"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/downarrow"
                />





            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/darkgrey"
                android:layout_below="@+id/tv_session2"
                android:layout_marginTop="25dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/li_sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_equip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/li_sp"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"

                android:orientation="vertical">


                <EditText
                    android:id="@+id/edtSelectSpeciality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_sp_title"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:backgroundTintMode="multiply"
                    android:focusable="false"
                    android:gravity="left"
                    android:hint="Select Speciality"
                    android:textColor="@color/darkgrey"
                    android:textSize="18dp"
                    android:textStyle="bold"

                    />

                <EditText
                    android:id="@+id/edtSelectEquipment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edtSelectSpeciality"
                    android:layout_marginBottom="50dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/darkgrey"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:backgroundTintMode="multiply"
                    android:focusable="false"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:hint="Select Equipment"
                    android:textSize="18dp"

                    />


